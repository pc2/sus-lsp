{
	"scopeName": "source.sus",
	"foldingStartMarker" : "\\{",
	"foldingStopMarker" : "\\}",
	"patterns": [
		{
			"name": "support.type",
			"match": "\\b(int|bool|float|double|string)\\b"
		},
		{
			"name": "keyword.control.untitled",
			"match": "\\b(module|struct|const|interface|input|output|action|query|trigger|domain|extern|__builtin__)\\b"
		},
		{
			"name": "storage.modifier",
			"match": "\\b(gen|if|when|else|while|for|in|reg|state|initial|assume|split|mod|type)\\b"
		},
		{
			"name": "constant.numeric",
			"match": "\\b(\\d[\\d_]*\\.?[\\d_]*(e[+-]?\\d+)?d?|\\d*'\\w+)\\b"
		},
		{
			"name": "string.quoted.double.untitled",
            "begin": "\"",
            "end": "\"",
            "patterns": [{
				"name": "constant.character.escape.untitled",
				"match": "\\\\."
        	}]
        },
		{
			"name": "expression.group",
			"begin": "\\(",
			"end": "\\)",
			"beginCaptures": {
				"0": { "name": "punctuation.paren.open" }
			},
			"endCaptures": {
				"0": { "name": "punctuation.paren.close" }
			},
			"patterns": [{ "include": "$self" }]
		},
		{
			"name": "expression.group",
			"begin": "\\[",
			"end": "\\]",
			"beginCaptures": {
				"0": { "name": "punctuation.bracket.open" }
			},
			"endCaptures": {
				"0": { "name": "punctuation.bracket.close" }
			},
			"patterns": [{ "include": "$self" }]
		},
		{
			"name": "expression.group",
			"begin": "\\{",
			"end": "\\}",
			"beginCaptures": {
				"0": { "name": "punctuation.brace.open" }
			},
			"endCaptures": {
				"0": { "name": "punctuation.brace.close" }
			},
			"patterns": [{ "include": "$self" }]
		},
		{
			"name": "comment.line.double-slash",
			"match": "//[^\\n]*\\n"
		},
		{
			"name": "comment.block",
			"begin" : "\\/\\*",
			"end" : "\\*\\/"
		}
	]
}
